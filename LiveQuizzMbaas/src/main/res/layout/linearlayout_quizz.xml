<?xml version="1.0" encoding="utf-8"?>

<fr.idapps.mbaas.livequizzmbaas.ui.listitems.QuizzLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@android:color/white"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mQuizzNameTextView"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="fdsfdfd" />

        <ImageView
            android:id="@+id/mQuizzStatusImageView"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/on" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mQuizzTeaserTextView"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/mQuizzAdminTextView"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</fr.idapps.mbaas.livequizzmbaas.ui.listitems.QuizzLinearLayout>

